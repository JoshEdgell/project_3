<!DOCTYPE html>
<html ng-app="DadJokes">
  <head>
    <meta charset="utf-8">
    <title>Welcome to <%=user.firstName%>'s Jokes Page!</title>
    <!-- Angular -->
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular.min.js"></script>
    <!-- JS -->
    <script src="/js/app.js"></script>
  </head>
  <body ng-controller="MainController as ctrl">
    <h3><u>Jokes <%=user.firstName%> <%=user.lastName%> has created</u></h3>
      <ul>
        <% for (let i = 0; i < user.createdJokes.length; i++) { %>
          <li><%=user.createdJokes[i].joke%></li>
        <% } %>
      </ul>


    <h3><u><%=user.firstName%>'s Favorite Jokes:</u></h3>
    <p ng-if="ctrl.poop">Show me</p>
    <ul>
      <% for (let i = 0; i < user.favoriteJokes.length; i++){ %>
        <li><%= user.favoriteJokes[i].joke %></li>
        <!-- Would like to add a 'Add to favorites' button right here, but having trouble passing joke text into the addToFavorites function -->
      <% } %>
    </ul>
    <!-- REGISTER NEW USER -->
    <a href="/users/register">New User</a></br>
    <!--  END OF 'REGISTER NEW USER' -->
    <!-- USER LOGIN -->
    <a href="/session/login">Login</a></br>
    <!-- END OF 'USER LOGIN'   -->
    <!-- USER LOGOUT -->
    <a href="/session/logout">Logout</a></br>
    <!-- END OF USER LOGOUT -->
    <!-- GO TO USER HOME -->
    <a href="/session/home">My Home</a></br>
    <!-- END OF USER HOME -->
  </body>
</html>
